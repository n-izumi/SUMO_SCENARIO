<?xml version="1.0" encoding="UTF-8"?>

<routes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="http://sumo.dlr.de/xsd/routes_file.xsd">
    <!-- 車両設定 -->
    <vType id="normal" accel="3" decel="6.5" sigma="0" length="5" minGap="1.5" vClass="passenger" maxSpeed="14" carFollowModel="IDM"/>
    <vType id="bus" accel="3" decel="5.5" sigma="0" length="11" minGap="1.5" vClass="bus" maxSpeed="11" carFollowModel="IDM" color="1,0,0"/> <!--赤色-->
    <vType id="large" accel="3" decel="6.5" sigma="0" length="12" minGap="1.5" vClass="truck" maxSpeed="14" carFollowModel="IDM" color="0,0,1"/> <!--青色-->
    
    <!-- 車両生成設定 -->
    <flow id="TE1" type="normal" from="-TE" to="TW" begin="0" end="3600" probability="0.003"/>
    <flow id="TE2" type="bus" from="-TE" to="TW" begin="0" end="3600" probability="0.0001"/>
    <flow id="TE3" type="large" from="-TE" to="TW" begin="0" end="3600" probability="0.00025"/>

    <flow id="TE4" type="normal" from="-TE" to="B" begin="0" end="3600" probability="0.002"/>
    <flow id="TE5" type="bus" from="-TE" to="B" begin="0" end="3600" probability="0.00005"/>
    <flow id="TE6" type="large" from="-TE" to="B" begin="0" end="3600" probability="0.00015"/>

    <flow id="TW1" type="normal" from="-TW" to="TE" begin="0" end="3600" probability="0.005"/>
    <flow id="TW2" type="bus" from="-TW" to="TE" begin="0" end="3600" probability="0.0001"/>
    <flow id="TW3" type="large" from="-TW" to="TE" begin="0" end="3600" probability="0.00025"/>

    <flow id="TW4" type="normal" from="-TW" to="B" begin="0" end="3600" probability="0.002"/>
    <flow id="TW5" type="bus" from="-TW" to="B" begin="0" end="3600" probability="0.00005"/>
    <flow id="TW6" type="large" from="-TW" to="B" begin="0" end="3600" probability="0.0001"/>

    <flow id="B1" type="normal" from="-B" to="TE" begin="0" end="3600" probability="0.00175"/>
    <flow id="B2" type="bus" from="-B" to="TE" begin="0" end="3600" probability="0.00005"/>
    <flow id="B3" type="large" from="-B" to="TE" begin="0" end="3600" probability="0.00005"/>

    <flow id="B4" type="normal" from="-B" to="TW" begin="0" end="3600" probability="0.00175"/>
    <flow id="B5" type="bus" from="-B" to="TW" begin="0" end="3600" probability="0.00005"/>
    <flow id="B6" type="large" from="-B" to="TW" begin="0" end="3600" probability="0.00005"/>

    <!-- ストレート側駐車車両設定 -->
    <!-- type: 車両種別（normal=普通車、large=トラック、bus=バス） -->
    <!-- number: 駐車車両有無（1=駐車車両発生あり、0=駐車車両発生なし） -->
    <!-- endPos: 駐車位置（工事帯停止線から何mの位置で駐車するか、停止線から20mの場合 "-20" を設定） -->
    <!-- begin: 発生時間（SIM開始から何秒後に駐車車両が生成されるか、SIM開始後30秒後に駐車車両を生成する場合 "30" を設定） -->
    <!-- duration: 駐車時間（駐車してから何秒後に再出発するか、5分間駐車する場合 "300" を設定） -->
    <!-- parking: 駐車スペース有無（true=駐車スペースあり、false=駐車スペースなし） -->
    <flow id="straight_parking" type="normal" from="-TW" to="B" begin="5" number="1" color="0.5,0.5,0">
        <stop lane="E0_0" endPos="-20" duration="60" parking="true"/>
    </flow>

    <!-- 規制側駐車車両設定 -->
    <!-- type: 車両種別（normal=普通車、large=トラック、bus=バス） -->
    <!-- number: 駐車車両有無（1=駐車車両発生あり、0=駐車車両発生なし） -->
    <!-- endPos: 駐車位置（工事帯停止線から何mの位置で駐車するか、停止線から20mの場合 "-20" を設定） -->
    <!-- begin: 発生時間（SIM開始から何秒後に駐車車両が生成されるか、SIM開始後30秒後に駐車車両を生成する場合 "30" を設定） -->
    <!-- duration: 駐車時間（駐車してから何秒後に再出発するか、5分間駐車する場合 "300" を設定） -->
    <!-- parking: 駐車スペース有無（true=駐車スペースあり、false=駐車スペースなし） -->
    <flow id="regulation_parking" type="normal" from="-B" to="TW" begin="6" number="1" color="0.5,0.5,0">
        <stop lane="-B_0" endPos="-10" duration="10" parking="true"/>
    </flow>
</routes>
